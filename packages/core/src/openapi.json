{
  "openapi": "3.1.0",
  "info": {
    "title": "Computer Interaction API",
    "version": "1.0.0",
    "description": "API to interact with and control a computer.",
    "contact": {
      "name": "API Support",
      "email": "support@example.com"
    },
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:4242/{computer_name}/api",
      "description": "Local development server",
      "variables": {
        "computer_name": {
          "default": "your-computer-name",
          "description": "Computer name"
        }
      }
    }
  ],
  "tags": [
    {
      "name": "Computer",
      "description": "System-level operations (keyboard, mouse, display)"
    },
    {
      "name": "Editor",
      "description": "File editing operations"
    },
    {
      "name": "Bash",
      "description": "Bash command operations"
    }
  ],
  "paths": {
    "/computer/screenshot": {
      "get": {
        "tags": ["Computer"],
        "summary": "Take a Screenshot",
        "description": "Captures and returns a screenshot from the specified display as a PNG file.",
        "operationId": "computerTakeScreenshot",
        "parameters": [
          {
            "$ref": "#/components/parameters/DisplayNumber"
          }
        ],
        "responses": {
          "200": {
            "description": "Screenshot captured successfully.",
            "content": {
              "image/png": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        },
        "x-implementation-details": "The implementation captures the entire screen of the specified display and returns it as a PNG file."
      }
    },
    "/computer/key": {
      "post": {
        "tags": ["Computer"],
        "summary": "Press key",
        "description": "Presses a key on the specified display.",
        "operationId": "computerPressKey",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string",
                    "description": "Key to press."
                  },
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to press the key."
                  }
                },
                "required": ["key"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Key pressed successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/type": {
      "post": {
        "tags": ["Computer"],
        "summary": "Type text",
        "description": "Types text on the specified display.",
        "operationId": "computerTypeText",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Text to type."
                  },
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to type text."
                  },
                  "typing_delay": {
                    "type": "integer",
                    "default": 12,
                    "description": "Delay (in milliseconds) between typed characters."
                  },
                  "typing_group_size": {
                    "type": "integer",
                    "default": 50,
                    "description": "Number of characters typed between delays."
                  }
                },
                "required": ["text"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Text typed successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/mouse-move": {
      "post": {
        "tags": ["Computer"],
        "summary": "Move mouse cursor",
        "description": "Moves the mouse cursor to the specified coordinates on the given display.",
        "operationId": "computerMoveCursor",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "integer",
                    "description": "X coordinate."
                  },
                  "y": {
                    "type": "integer",
                    "description": "Y coordinate."
                  },
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to move the mouse."
                  }
                },
                "required": ["x", "y"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Mouse moved successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/left-click": {
      "post": {
        "tags": ["Computer"],
        "summary": "Perform left mouse click",
        "description": "Performs a left mouse click on the specified display.",
        "operationId": "computerLeftClick",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to perform the click."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Left click performed successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/right-click": {
      "post": {
        "tags": ["Computer"],
        "summary": "Perform right mouse click",
        "description": "Performs a right mouse click on the specified display.",
        "operationId": "computerRightClick",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to perform the click."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Right click performed successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/middle-click": {
      "post": {
        "tags": ["Computer"],
        "summary": "Perform middle mouse click",
        "description": "Performs a middle mouse click on the specified display.",
        "operationId": "computerMiddleClick",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to perform the click."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Middle click performed successfully."
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/computer/double-click": {
      "post": {
        "tags": ["Computer"],
        "summary": "Perform double click",
        "description": "Performs a double click with the left mouse button on the specified display.",
        "operationId": "computerDoubleClick",
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to perform the double click."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Double click performed successfully."
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/computer/left-click-drag": {
      "post": {
        "tags": ["Computer"],
        "summary": "Perform left click and drag",
        "description": "Performs a left click and drag operation to the specified coordinates on the given display.",
        "operationId": "computerLeftClickDrag",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "x": {
                    "type": "integer",
                    "description": "Target X coordinate to drag to."
                  },
                  "y": {
                    "type": "integer",
                    "description": "Target Y coordinate to drag to."
                  },
                  "display_num": {
                    "type": "integer",
                    "default": 1,
                    "description": "Display number on which to perform the drag operation."
                  }
                },
                "required": ["x", "y"]
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Drag operation performed successfully."
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/computer/cursor-position": {
      "get": {
        "tags": ["Computer"],
        "summary": "Get cursor position",
        "description": "Gets the current position of the mouse cursor on the specified display.",
        "operationId": "computerGetCursorPosition",
        "parameters": [
          {
            "name": "display_num",
            "in": "query",
            "description": "Display number to get the cursor position from.",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cursor position coordinates.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "x": {
                      "type": "integer"
                    },
                    "y": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            }
          }
        }
      }
    },
    "/editor/view": {
      "post": {
        "tags": ["Editor"],
        "summary": "View a file",
        "description": "View the contents of a file, optionally specifying a line range.",
        "operationId": "editorViewFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ViewParams"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File content",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/FileNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/editor/create": {
      "post": {
        "tags": ["Editor"],
        "summary": "Create a file",
        "description": "Create a new file with optional content.",
        "operationId": "editorCreateFile",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateParams"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "File created"
          },
          "400": {
            "description": "File already exists"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/editor/str-replace": {
      "post": {
        "tags": ["Editor"],
        "summary": "Replace string in a file",
        "description": "Replace occurrences of a string in a file with another string.",
        "operationId": "editorReplaceString",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/StrReplaceParams"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "String replaced"
          },
          "404": {
            "$ref": "#/components/responses/FileNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/editor/insert": {
      "post": {
        "tags": ["Editor"],
        "summary": "Insert text into a file",
        "description": "Insert text into a specific line of a file.",
        "operationId": "editorInsertText",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/InsertParams"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "Text inserted"
          },
          "404": {
            "$ref": "#/components/responses/FileNotFound"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/editor/undo-edit": {
      "post": {
        "tags": ["Editor"],
        "summary": "Undo the last edit",
        "description": "Currently not implemented.",
        "operationId": "editorUndoLastEdit",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UndoEditParams"
              }
            }
          }
        },
        "responses": {
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/command": {
      "post": {
        "tags": ["Bash"],
        "summary": "Execute Bash Command",
        "description": "Executes a given bash command and returns the output. If the command runs longer than 15 seconds, it will be moved to background and return a process ID.",
        "operationId": "bashExecuteCommand",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CommandParams"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Command executed successfully or moved to background.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommandResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/process/{pid}/output": {
      "get": {
        "tags": ["Bash"],
        "summary": "Get Process Output",
        "description": "Gets the output of a background process by its PID.",
        "operationId": "bashGetProcessOutput",
        "parameters": [
          {
            "name": "pid",
            "in": "path",
            "description": "Process ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Process output retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommandResponse"
                }
              }
            }
          },
          "404": {
            "description": "Process not found"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/process/{pid}": {
      "delete": {
        "tags": ["Bash"],
        "summary": "Terminate Process",
        "description": "Terminates a background process by its PID.",
        "operationId": "bashTerminateProcess",
        "parameters": [
          {
            "name": "pid",
            "in": "path",
            "description": "Process ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Process terminated successfully"
          },
          "404": {
            "description": "Process not found"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/processes/managed": {
      "get": {
        "tags": ["Bash"],
        "summary": "List Managed Processes",
        "description": "Lists all background processes managed by the API.",
        "operationId": "bashListManagedProcesses",
        "responses": {
          "200": {
            "description": "List of managed processes.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessListResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/processes/system": {
      "get": {
        "tags": ["Bash"],
        "summary": "List System Processes",
        "description": "Lists all running processes on the system.",
        "operationId": "bashListSystemProcesses",
        "responses": {
          "200": {
            "description": "List of system processes.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProcessListResponse"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/bash/restart": {
      "post": {
        "tags": ["Bash"],
        "summary": "Restart System",
        "description": "Restarts the system.",
        "operationId": "bashRestartSystem",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RestartParams"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "System restart initiated"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPError": {
        "type": "object",
        "properties": {
          "detail": {
            "type": "string"
          }
        }
      },
      "ViewParams": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to be viewed."
          },
          "view_range": {
            "type": "array",
            "items": {
              "type": "integer"
            },
            "minItems": 2,
            "maxItems": 2,
            "description": "Start and end lines (inclusive).",
            "nullable": true
          }
        },
        "required": ["path"]
      },
      "CreateParams": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file to be created."
          },
          "file_text": {
            "type": "string",
            "description": "Optional content to place in the file.",
            "nullable": true
          }
        },
        "required": ["path"]
      },
      "StrReplaceParams": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file."
          },
          "old_str": {
            "type": "string",
            "description": "String to replace."
          },
          "new_str": {
            "type": "string",
            "description": "Replacement string."
          }
        },
        "required": ["path", "old_str", "new_str"]
      },
      "InsertParams": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file."
          },
          "text": {
            "type": "string",
            "description": "The text to insert."
          },
          "insert_line": {
            "type": "integer",
            "description": "Line number at which to insert text.",
            "nullable": true
          }
        },
        "required": ["path", "text"]
      },
      "UndoEditParams": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "Path to the file."
          }
        },
        "required": ["path"]
      },
      "CommandParams": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Bash command to execute."
          }
        },
        "required": ["command"]
      },
      "CommandResponse": {
        "type": "object",
        "properties": {
          "output": {
            "type": "string",
            "description": "Command output if completed.",
            "nullable": true
          },
          "process_id": {
            "type": "integer",
            "description": "Process ID if running in background.",
            "nullable": true
          },
          "status": {
            "type": "string",
            "description": "Status of the command execution.",
            "enum": ["completed", "background"]
          }
        },
        "required": ["status"]
      },
      "ProcessInfo": {
        "type": "object",
        "properties": {
          "pid": {
            "type": "integer",
            "description": "Process ID"
          },
          "command": {
            "type": "string",
            "description": "Command that started the process"
          },
          "status": {
            "type": "string",
            "description": "Current status of the process"
          },
          "cpu_percent": {
            "type": "number",
            "description": "CPU usage percentage",
            "nullable": true
          },
          "memory_percent": {
            "type": "number",
            "description": "Memory usage percentage",
            "nullable": true
          },
          "create_time": {
            "type": "number",
            "description": "Process creation time (Unix timestamp)",
            "nullable": true
          }
        },
        "required": ["pid", "command", "status"]
      },
      "ProcessListResponse": {
        "type": "object",
        "properties": {
          "processes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ProcessInfo"
            },
            "description": "List of processes"
          }
        },
        "required": ["processes"]
      },
      "RestartParams": {
        "type": "object",
        "description": "No parameters needed for restart"
      }
    },
    "responses": {
      "InternalServerError": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/HTTPError"
            }
          }
        }
      },
      "FileNotFound": {
        "description": "File not found"
      }
    },
    "parameters": {
      "DisplayNumber": {
        "name": "display_num",
        "in": "query",
        "description": "Display number to operate on, defaults to 1.",
        "required": false,
        "schema": {
          "type": "integer",
          "default": 1
        }
      }
    },
    "examples": {
      "ExampleFileViewRequest": {
        "summary": "Example request for viewing a file",
        "description": "Example of how to view a file with a line range specified.",
        "value": {
          "path": "/path/to/file.txt",
          "view_range": [1, 10]
        }
      },
      "ExampleKeyPressRequest": {
        "summary": "Example request to press a key",
        "description": "Example of how to press the 'Enter' key on display 1.",
        "value": {
          "key": "Enter",
          "display_num": 1
        }
      },
      "ExampleScreenshotResponse": {
        "summary": "Example screenshot response",
        "description": "Example of a base64-encoded image returned from a screenshot request.",
        "value": "iVBORw0KGgoAAAANSUhEUgAA...5CYII="
      }
    }
  }
}
