{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"lib": [],
		"target": "ES2021",
		"module": "ES2022",
		"allowJs": true,
		"moduleResolution": "node",
		"noEmit": true,
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true
	},
	"exclude": ["node_modules", "dist"]
}
